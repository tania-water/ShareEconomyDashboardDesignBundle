{% spaceless %}
{# required configurations #}
{% set currentTheme = dashboardTheme is defined ? dashboardTheme : 'blue' %}
{% set emailColor = dashboardThemeColor is defined ? dashboardThemeColor : '#53D2BA' %}
{% set supportedLocales = dashboardLocales is defined ? dashboardLocales : ['ar'] %}
{% set fsupportedLocales = frontendLocales is defined ? frontendLocales : ['ar'] %}
{% set rtlLocales = rtlLocales is defined ? rtlLocales : ['ar'] %}
{% set defaultLocale = dashboardDefaultLocale is defined ? dashboardDefaultLocale : 'ar' %}
{% set locale = app.request and app.request.locale and app.request.locale in supportedLocales ? app.request.locale : defaultLocale %}
{% set projectName = projectName is defined ? projectName : 'logo' %}
{% set enableLargeSidebar = enableLargeSidebar is defined ? enableLargeSidebar : false %}
{% if locale in rtlLocales %}
    {% set currentSide = 'right' %}
    {% set oppositeSide = 'left' %}
    {% set cssDirection = 'rtl' %}
{% else %}
    {% set currentSide = 'left' %}
    {% set oppositeSide = 'right' %}
    {% set cssDirection = 'ltr' %}
{% endif %}

{# pages content #}
{% block page %}{% endblock %}
{% endspaceless %}