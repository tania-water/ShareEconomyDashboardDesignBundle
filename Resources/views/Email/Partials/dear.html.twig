{% if name is defined or headText is defined %}
    <table width="100%" bgcolor="#eeeeee" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="full-text">
        <tbody>
            <tr>
                <td align="center" >
                    <table width="600" bgcolor="#fcfcfc"  cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                        <tbody>
                            <tr>
                                <td width="100%">
                                    <table width="600" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                                        <tbody>
                                            <!-- Spacing -->
                                            <tr>
                                                <td height="20" style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">&nbsp;</td>
                                            </tr>
                                            <!-- Spacing -->
                                            <tr>
                                                <td align="center" >
                                                    <table width="560" align="center" cellpadding="0" cellspacing="0" border="0" class="devicewidthinner">
                                                        <tbody>
                                                            {% if name is defined and name | length %}
                                                                <tr>
                                                                    <td style="font-family: Helvetica, arial, sans-serif; font-size: 24px; color: #282828; text-align:{{ currentSide }}; line-height: 36px;">
                                                                        {{ 'Dear' | trans({}, "email") }} {{ name }}
                                                                    </td>
                                                                </tr>
                                                            {% endif %}
                                                            {% if headText is defined and headText | length %}
                                                                <tr>
                                                                    <td style="font-family: Helvetica, arial, sans-serif; font-size: 18px; color: #282828; text-align:{{ currentSide }}; line-height: 36px;">
                                                                        {{ headText | raw }}
                                                                    </td>
                                                                </tr>
                                                            {% endif %}
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td height="20" style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;"> </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
{% endif %}